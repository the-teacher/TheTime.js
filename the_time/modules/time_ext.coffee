Time::dashed_date         =-> "#{@year}-#{to_lz @month}-#{to_lz @day}"
Time::dotted_date         =-> "#{@year}.#{to_lz @month}.#{to_lz @day}"
Time::day_month_str       =-> "#{@t.day.abbr2[@day_of_week()]}, #{@day} #{@t.month.abbr3[@month]} "
Time::month_day_str       =-> "#{@day} #{@t.month.gen[@month]}, #{@t.day.abbr2[@day_of_week()]} "
Time::short_month_day_str =-> "#{@day} #{@t.month.abbr3[@month]}, #{@t.day.abbr2[@day_of_week()]} "
Time::month_day_only_str  =-> "#{@day} #{@t.month.abbr3[@month]} "
Time::month_day_year_str  =-> "#{@day} #{@t.month.abbr3[@month]} #{@year} "
Time::short_repr          =-> "#{@day}/#{@month}/#{@year} "
Time::full_repr           =-> "#{@day} #{@t.month.gen[@month]} #{@year} "
Time::full_string_repr    =-> "#{@day} #{@t.month.gen[@month]}, #{@t.day.name[@day_of_week()]} "